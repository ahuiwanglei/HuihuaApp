<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>


    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="login_edittext">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textCursorDrawable">@color/defalut_lable_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/defalut_lable_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="default_btn" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/login_btn_bg</item>
        <item name="android:textColor">@color/balck</item>
    </style>

    <style name="home_menu_img">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="home_menu_lable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/defalut_lable_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <style name="list_item_lable_big_size">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="list_item_lable_small_size">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="list_item_value_big_size">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="list_item_value_small_size">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
    </style>

</resources>
